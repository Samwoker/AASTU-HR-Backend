        {
          "name": "Login",
          "event": [ { "listen": "test", "script": { "exec": [ "if (pm.response.code === 200) {", "  const json = pm.response.json();", "  pm.environment.set('auth_token', json.token);", "  pm.environment.set('user_id', json.data.user.id);", "  pm.environment.set('company_id', json.data.user.company_id);", "  pm.environment.set('role_id', json.data.user.role_id);", "  if (json.data.user.employee_id) pm.environment.set('employee_id', json.data.user.employee_id);", "}" ], "type": "text/javascript" } } ],
          "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" } ], "body": { "mode": "raw", "raw": "{\n  \"email\": \"{{admin_email}}\",\n  \"password\": \"{{admin_password}}\"\n}" }, "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth", "login"] } }
