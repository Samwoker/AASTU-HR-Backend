# Database Configuration
# Update these values to match your docker-compose or local setup
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=employee_management_db
DATABASE_URL="postgresql://postgres:password@localhost:5432/employee_management_db?schema=public"

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
# CHANGE THIS TO A SECURE SECRET IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d


# Email (SMTP)
# For Gmail, use an App Password (not your normal Gmail password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Optional but recommended (preferred by the code if set)
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM="Aastu HR <noreply@yourdomain.com>"
# SMTP_SECURE=false

# These are used by the backend (fallback if SMTP_USER/SMTP_PASS are not set)
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Frontend link used in credential email
EMPLOYEE_LOGIN_URL=http://localhost:5173/employee-login
PASSWORD_RESET_URL



# =====================================
# EMAIL_PROVIDER: Choose your email provider
# =====================================
# Options: "nodemailer" | "smtp" | "resend"
# - nodemailer/smtp: Use SMTP via Nodemailer
# - resend: Use Resend API
EMAIL_PROVIDER=nodemailer

# =====================================
# Resend Configuration
# =====================================
# Use Resend instead of SMTP
# EMAIL_PROVIDER=resend

# Resend credentials
RESEND_API_KEY=re_************************
RESEND_FROM="Aastu HR <onboarding@yourdomain.com>"  # must be a verified sender/domain in Resend

# Optional
RESEND_REPLY_TO=support@yourdomain.com
RESEND_SEND_TIMEOUT_MS=20000

# =====================================
# Common Email Settings
# =====================================
EMAIL_FROM="Aastu HR <onboarding@yourdomain.com>"  # fallback sender used by all providers